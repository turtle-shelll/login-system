<body>
    <div class="registration-form">
                   <h1>Register user</h1>
            
                   
       <form  action="/api/v1/auth/register" method="post">
    <div class="input-area">
        <label for="name">first name</label>
        <input type="text" autocomplete="on" id="name" name="name" required
        placeholder="user name"
        value="<%= typeof name != 'undefined' ? name : '' %>">
    </div>

    <div class="input-area">
        <label for="email">email</label>
        <input type="email" autocomplete="on" id="email" name="email" required
        placeholder="email"
        value="<%= typeof email != 'undefined' ? email : '' %>">
        
    </div>

    <div class="input-area">
        <label for="password">password</label>
        <input type="password" id="password" name="password" required
        placeholder="password"
        value="<%= typeof password != 'undefined' ? password : '' %>">
    </div>
    <!--<div class="input-area">
        <label for="conform-password">conform password</label>
        <input type="password" id="conform-password" name="conform-password" 
        placeholder="conform-password"
        value="<%= typeof password != 'undefined' ? password : '' %>">
    </div>-->
    <%- include('./massage') %>
    <div class="form-bottom">
        <input type="submit" value="Sign up" class="submit">
        <p class="cookie-policy">By signing up, you agree to our Terms and condition. </p>
    </div>
       </form>

<p class="login-link">already have an account? <a href="/login"> login</a></p>
    </div>    
